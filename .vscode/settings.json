{
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    "python.jupyter.defaultKernel": "novel-scenification",
    "jupyter.kernels.filter": [
        {
            "path": "novel-scenification",
            "type": "jupyterKernelspec"
        }
    ],
    "jupyter.interactiveWindow.textEditor.executeSelection.addNewCell": false,
    "jupyter.notebookFileRoot": "${workspaceFolder}",
    "python.analysis.extraPaths": [],
    "jupyter.jupyterServerType": "local",
    "jupyter.notebookFileRoot": "${workspaceFolder}",
    // don’t show “The git repository at '…' has too many active changes…” again
    "git.warningOnLargeChangeCount": false
}